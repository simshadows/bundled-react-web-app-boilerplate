{
  "name": "react-web-app-boilerplate",
  "author": "simshadows <contact@simshadows.com>",
  "version": "0.0.1",
  "license": "Unlicense",
  "description": "I learn to incrementally set up a React + TSX toolchain for building and hosting on GitHub Pages!",
  "keywords": [],
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "build": "yarn typecheck && yarn build-force",
    "build-dev": "yarn build-force --mode development",
    "build-force": "vite build --emptyOutDir",
    "start": "vite --port 8000",
    "serve": "python3 -m http.server --directory ./dist",
    "test": "yarn typecheck && jest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "ejs": "^3.1.10",
    "esbuild": "^0.24.2",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
